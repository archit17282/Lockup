<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.architpanwar.lockup.passwordrecoverset"
    tools:showIn="@layout/activity_passwordrecoverset"
    android:background="@color/primary">



    <ImageView
        android:layout_margin="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_launcher"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:padding="8dp"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:background="@color/fbutton_color_alizarin"
        android:text="This will be required to recover password, if in case you forget password" />

    <Spinner
        android:id="@+id/questionsSpinner"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:layout_margin="12dp" />

    <EditText
        android:id="@+id/answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:textColorHint="@color/white"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:hint="Enter your answer here" />


   <Button
       android:layout_width="100dp"
       android:layout_height="50dp"
       android:layout_gravity="center"
       android:text="submit"
       android:id="@+id/submitres"/>

</android.widget.LinearLayout>
